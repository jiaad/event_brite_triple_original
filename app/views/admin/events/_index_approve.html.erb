<div class="container mx-auto">
  <table class="table table-striped mt-4" style="background-color: #e3f2fd;">
  <h1 class="text-center mt-3">Event Admin Panel</h1>
  <h4 class="text-center mt-3">Event à Approuver</h1>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Durée</th>
        <th scope="col">Titre</th>
        <th scope="col">Lieu</th> 
        <th scope="col">Prix</th>
      </tr>
    </thead>
    <tbody>
      <% @event.each do |event| %>
        <tr>
          <th scope="row"><%= event.id %></th>
          <td><%= event.start_date.strftime('%F') %></td>
          <td><%= event.duration %>mn</td>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.price %>€</td>
          <td><a href="<%= edit_admin_event_path(event.id) %>"><i class="fas fa-eye"></i></a></td>
          <td><a href="<%= admin_event_path(event.id)%>" data-confirm="Voulez-vous vraiment supprimer cet utilisateur?" data-method="DELETE"><i class="fas fa-trash-alt"></i></a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>