<div class="container mx-auto">
  <table class="table table-striped mt-4 bg-dark text-white" >
  <h1 class="text-center mt-3">User Admin Panel</h1>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Pr√©nom</th>
        <th scope="col">Nom</th>
        <th scope="col">Email</th>
        <th scope="col">Description</th>
        <th scope="col">Edit</th>
        <th scope="col">Supprimer</th>
      </tr>
    </thead>
    <tbody>
    
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.description %></td>
          <td><a href="<%= edit_admin_user_path(user.id) %>"><i class="fas fa-eye"></i></a></td>
          <td><a href="<%= admin_user_path(user.id)%>" data-confirm="Voulez-vous vraiment supprimer cet utilisateur?" data-method="DELETE"><i class="fas fa-trash-alt"></i></a></td>
      
      </tr>
    <% end %>
    </tbody>
  </table>
</div>