<div class="text-center">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'start date' %>
      <%= text_field_tag 'start_date', @event.start_date %>
      <br /> <br />

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @event.title %>
      <br /> <br />

      <%= label_tag 'decription' %>
      <%= text_area_tag 'description', @event.description %>
      <br /> <br />

      <%= label_tag 'duration' %>
      <%= text_field_tag 'duration', @event.duration %>
      <br /> <br />

      <%= label_tag 'location' %>
      <%= text_field_tag 'location', @event.location %>
      <br /> <br />

      <%= label_tag 'price' %>
      <%= text_field_tag 'price', @event.price %>
      <br /> <br />

      <%= submit_tag "Create Post" %>

    <% end %>

    </div>